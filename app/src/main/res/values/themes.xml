<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.VTO" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@color/text_on_accent</item>
        
        <!-- Status bar and navigation bar for edge-to-edge design -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Widget customization -->
        <item name="materialCardViewStyle">@style/Widget.VTO.CardView</item>
        <item name="materialButtonStyle">@style/Widget.VTO.Button</item>
        <item name="bottomNavigationStyle">@style/Widget.VTO.BottomNavigation</item>
        <item name="appBarLayoutStyle">@style/Widget.VTO.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.VTO.Toolbar</item>
        
        <!-- Fix window insets behavior -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.VTO.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Button style -->
    <style name="Widget.VTO.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Bottom Navigation style -->
    <style name="Widget.VTO.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">8dp</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    
    <!-- AppBar style to remove extra space -->
    <style name="Widget.VTO.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    
    <!-- Toolbar style with consistent spacing -->
    <style name="Widget.VTO.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.VTO.TitleLarge</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    
    <!-- Title text style -->
    <style name="TextAppearance.VTO.TitleLarge" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Circular ImageView style -->
    <style name="ShapeAppearanceOverlay.App.CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>